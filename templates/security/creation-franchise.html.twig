{% extends "base.html.twig" %}

{% block title %}Ajout d'une nouvelle franchise{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('modal') }}
{% endblock %}

{% block body %}
    <a href="{{path("app_admin")}}" class="position-absolute mx-1 mx-lg-3 mt-1 size_up">
        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-backspace-fill red size-up" viewBox="0 0 16 16">
          <path d="M15.683 3a2 2 0 0 0-2-2h-7.08a2 2 0 0 0-1.519.698L.241 7.35a1 1 0 0 0 0 1.302l4.843 5.65A2 2 0 0 0 6.603 15h7.08a2 2 0 0 0 2-2V3zM5.829 5.854a.5.5 0 1 1 .707-.708l2.147 2.147 2.146-2.147a.5.5 0 1 1 .707.708L9.39 8l2.146 2.146a.5.5 0 0 1-.707.708L8.683 8.707l-2.147 2.147a.5.5 0 0 1-.707-.708L7.976 8 5.829 5.854z"/>
        </svg>
    </a>
    <div class="page-100" style="background-image : url('{{asset("img/bg-pump.webp")}}')">    
        {% if franchise is defined %}
        <div class="d-flex position-absolute mt-1 ms-5 wrapper-onglets pl-50">
            <button id="page-button" class="selected">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-window me-1" viewBox="0 0 16 16">
                    <path d="M2.5 4a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1zm2-.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zm1 .5a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1z"/>
                    <path d="M2 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2H2zm13 2v2H1V3a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1zM2 14a1 1 0 0 1-1-1V6h14v7a1 1 0 0 1-1 1H2z"/>
                </svg>
                Contenu
            </button>
            <button id="mail-button">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-envelope me-1" viewBox="0 0 16 16">
                    <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z"/>
                </svg>
                Mail
            </button>
        </div>
        {% endif %}
    <div class="full-center page-100">
        <div class="wrapper-form p-2 p-md-5" id="page-main">
            <h1  class="text-center">Cr√©er une nouvelle franchise</h1>  
            {% for message in app.flashes('success') %}
                <div class="alert alert-success mt-3">
                    <div>{{ message }}</div>
                </div>
            {% endfor %} 
            {{ form_start(form) }}
                {{ form_row(form.email)}}
                {{ form_row(form.name) }}
            {{ form_end(form) }}
        </div>
    {% if franchise is defined %}
    <div hidden class="container" id="mail-main"> 
        <div class="wrapper-email p-4 mt-4"> 
        {% include "mail/new_franchise.html.twig" %}
        </div>  
    </div>  
    {% endif %}
    </div>
    </div>

{% endblock %}