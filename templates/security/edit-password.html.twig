{% extends 'base.html.twig' %}

{% block title %}Réinitilisation du mot de passe !{% endblock %}

{% block body %}
<div class="page-100 full-center" style="background-image : url('{{asset("img/rope.jpg")}}')">
    <div class="wrapper-form p-4">
  
            <h1 class="text-center py-3">Créez votre propre mot de passe</h1>
            <div>
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success my-3">
                        <div>{{ message }}</div>
                        <div>
                            <a href="{{path("app_login")}}"><button class="btn-grad grad-darkblue">
                            Accueil
                            </button></a>
                        </div>
                    </div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger my-3">
                        <div>{{ message }}</div>
                    </div>
                {% endfor %}

                {{ form_start(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

{% endblock %}